<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/barcode_field_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/barcode_confirmed_cardview_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/appie1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/barcode_cardview_description"
                />
            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/barcode_confiemed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:text="Apple pie"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <TextView
                android:id="@+id/barcode_confiemed_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:text="Energy : 12313 kcal"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/barcode_field_box_stroke"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:text="dfdhadffkdjhfkdjhfkdjfdhjkdkf"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/barcode_field_box_stroke"
                />

            <!-- Buttons -->
            <Button
                android:id="@+id/barcode_confirmed_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                style="?attr/borderlessButtonStyle"
                android:text="Add item">
            </Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>