<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/barcode_field_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/barcode_confirmed_cardview_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/milktea1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/barcode_cardview_description"
                />
            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/barcode_confiemed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:text="Milktea"
                android:textAppearance="?attr/textAppearanceHeadline6"
                />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Energy : 148 kcal"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Protein : 1.1 g"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Total lipid : 0.8 g"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Carbohydrate : 34.1 g"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Dietary fiber : 0 g"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Sugar : 32.6 g"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Sodium : 64 mg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Cholesterol : 0 mg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Satu-fatty acids : 0.8 mg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="20dp"
                        android:text="Trans fatty acids : 0 mg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/barcode_field_box_stroke"
                        />

                </LinearLayout>



            </LinearLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/barcode_confirmed_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                style="?attr/borderlessButtonStyle"
                android:text="Add item">
            </Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>