<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:paddingTop="@dimen/barcode_bottom_sheet_padding_vertical"
      android:paddingBottom="@dimen/barcode_bottom_sheet_padding_vertical"
      android:background="@color/white"
      android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/barcode_field_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">

        <!-- Media -->
        <ImageView
            android:id="@+id/barcode_field_cardview_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/milktea1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/barcode_cardview_description"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">

          <!-- Title, secondary and supporting text -->
          <TextView
              android:id="@+id/barcode_field_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Milktea"
              android:textColor="@color/black"
              android:textAppearance="?attr/textAppearanceHeadline6"
              />
          <TextView
              android:id="@+id/barcode_field_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:textAppearance="?attr/textAppearanceBody2"
              android:textColor="@color/barcode_field_box_stroke"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:text="Energy : 148 kcal"
              android:textAppearance="?attr/textAppearanceBody2"
              android:textColor="@color/barcode_field_box_stroke"
              />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="8dp"
              android:text="confirm barcode"
              android:id="@+id/barcode_field_btn_barcode_check"
              style="?attr/borderlessButtonStyle"
              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="nutrition info"
              android:id="@id/barcode_field_btn_input_nutrition_info"
              style="?attr/borderlessButtonStyle"
              />
        </LinearLayout>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>